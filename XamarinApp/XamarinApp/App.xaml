<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.App">
	<Application.Resources>
        <ResourceDictionary>


            <Color x:Key="PrimaryBackgroundColor">#222222</Color>
            <Color x:Key="SecondaryBackgroundColor">#333333</Color>
            <Color x:Key="ThirdBackgroundColor">#FF9700</Color>
            <Color x:Key="PrimaryFontColor">#EFEFEF</Color>
            <Color x:Key="SecondaryFontColor">#FF9700</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource ThirdBackgroundColor}"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryFontColor}"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource PrimaryFontColor}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource PrimaryFontColor}"/>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>